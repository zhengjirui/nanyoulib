<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/msgtype_header_img"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:background="@drawable/ny_msgtype_header_bg"  />

            <TextView
                android:id="@+id/msgtype_header_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLength="20"
                android:lines="1"
                android:ellipsize="end"
                android:layout_marginTop="10dip"/>
            <!--android:maxEms="15"-->
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_centerVertical="true"
                android:src="@drawable/ny_icon_logo" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/imageView"
                android:layout_toRightOf="@+id/imageView"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="喃呱客服将带您全程解决您的困惑！"
                android:textColor="#FFA500" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_alignParentBottom="true"
            android:background="#d3d7d4" />

    </RelativeLayout>

    <TextView
        android:id="@+id/typemsg_hint_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="10dip"
        android:gravity="center_vertical"
        android:textColor="#77787b"
        android:textSize="16sp"
        android:visibility="gone"/>

</LinearLayout>
