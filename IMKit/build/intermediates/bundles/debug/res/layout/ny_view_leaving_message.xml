<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lLayout_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ny_alert_bg1"
    android:paddingTop="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:orientation="vertical">
    <EditText
        android:id="@+id/et_leaving_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dip"
        android:padding="5dip"
        android:lines="1"
        android:gravity="top"
        android:hint="输入姓名："
        android:background="@drawable/bg_edittext"

        />

    <EditText
        android:id="@+id/et_leaving_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:padding="5dip"
        android:lines="1"
        android:gravity="top"
        android:hint="联系方式："
        android:background="@drawable/bg_edittext"

        />

    <EditText
        android:id="@+id/et_leaving_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dip"
        android:layout_marginTop="5dip"
        android:lines="5"
        android:gravity="top"
        android:hint="请输入您的问题(字数500以内)！"
        android:background="@drawable/bg_edittext"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_neg"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_weight="1"
            android:background="@drawable/ny_alertdialog_left_selector"
            android:gravity="center"
            android:textColor="#505050"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/img_line"
            android:layout_width="0.5dp"
            android:layout_height="46dp"
            android:background="@color/alertdialog_line" />

        <Button
            android:id="@+id/btn_pos"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_weight="1"
            android:background="@drawable/ny_alertdialog_right_selector"
            android:gravity="center"
            android:textColor="@color/de_title_bg"
            android:textSize="16sp"/>
    </LinearLayout>

</LinearLayout>